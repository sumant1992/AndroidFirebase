<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="40dp"
        android:text="Login Page"
        android:paddingLeft="70dp"


        />

    <EditText
        android:id="@+id/UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="15dp"
        android:inputType="textEmailAddress"
        android:hint="Email" />

    <EditText
        android:id="@+id/UserName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="15dp"
        android:inputType="textPassword"
        android:hint="password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="125dp"
        android:text="Submit"
        android:textSize="25dp"
        android:id="@+id/Submit1"
        android:onClick="EmailMethodlogin"
        />

    <TextView
        android:id="@+id/SignUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:onClick="SingnUpMethod"
        android:ems="10"
        android:textSize="30dp"
        android:paddingLeft="115dp"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Via Phone"
        android:ems="10"
        android:textSize="30dp"
        android:paddingLeft="56dp"
        android:onClick="PhoneNUmberMethod"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="50dp"
        android:paddingLeft="20dp"
        android:text="Enter Via Google "
        android:onClick="GooogleSignIn"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Via Facebook"
        android:paddingLeft="20dp"
        android:textSize="45dp"
        android:onClick="FBMethodLogin"



        />



</LinearLayout>